    <TextView
        android:id="@+id/tv_row_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:text="@string/lorem_ipsum_dolor_sit_amet"
        android:textSize="22sp"/>

</LinearLayout>